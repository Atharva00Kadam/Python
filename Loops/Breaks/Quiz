import time
for i in range(10,0,-1):
    time.sleep(1)
    print(i)
print("Welcome to My Quiz")
name = None
while not name:
    name = input("Enter your name:")
print("Hello"+name+"! Are you ready?")
answer = int(input("What is your favourite two digit number?"))
print(answer)
for i in range(answer):
    print(i)
print("All your numbers from 0 to"+answer+"Have been recorded!")
